@using StudentPortal.ViewModel;
@model RegisterStudentUserViewModel;

    @{

        ViewData["Title"] = "Register";
        Layout = "~/Views/Shared/_AccountLayout.cshtml";
    }
    
<section class="vh-100">
    <div class="container-fluid h-custom">
        <div class="row d-flex justify-content-center align-items-center h-100">
            <div class="col-md-9 col-lg-6 col-xl-5">
                <img src="https://mdbcdn.b-cdn.net/img/Photos/new-templates/bootstrap-login-form/draw2.webp"
                     class="img-fluid" alt="Sample image">
            </div>
            <div class="col-md-8 col-lg-6 col-xl-4 offset-xl-1">
                <h2 class="text-center mb-4">Register</h2>
                <form>
                    <div asp-validation-summary="ModelOnly" class="text-danger"></div>
                    <!-- Name input -->
                    <div data-mdb-input-init class="form-outline mb-4">
                        <input asp-for="Name" id="form3Example3" class="form-control form-control-lg" placeholder="Name" />
                        <label class="form-label" for="form3Example3">Name</label>
                        <span asp-validation-for="Name" class="text-danger"></span>

                    </div>
                    <!-- Email input -->
                    <div data-mdb-input-init class="form-outline mb-4">
                        <input asp-for="Email" type="email" id="form3Example3" class="form-control form-control-lg"
                               placeholder="Enter a valid email address" />
                        <label class="form-label" for="form3Example3">Email address</label>
                        <span asp-validation-for="Email" class="text-danger"></span>

                    </div>

                    <!-- Password input -->
                    <div data-mdb-input-init class="form-outline mb-3">
                        <input asp-for="Password" type="password" id="form3Example4" class="form-control form-control-lg"
                               placeholder="Enter password" />
                        <label class="form-label" for="form3Example4">Password</label>
                        <span asp-validation-for="Password" class="text-danger"></span>

                    </div>
                    <!-- Confrim Password -->
                    <div data-mdb-input-init class="form-outline mb-3">
                        <input asp-for="ConfirmPassword" type="password" id="form3Example4" class="form-control form-control-lg"
                               placeholder="Confrim password" />
                        <label class="form-label" for="form3Example4">Password</label>
                        <span asp-validation-for="ConfirmPassword" class="text-danger"></span>

                    </div>


                    <input type="submit" value="Register" class="btn btn-success btn-lg w-100 p-2" />
                    <p class="text-center mt-2">
                        Already have an account? <a asp-controller="Account" asp-action="Login" class="text-decoration-none">Login</a>
                    </p>
                    <div class="text-center">
                        <a asp-controller="Home" asp-action="Index" class="btn btn-primary text-decoration-none mt-3">Back</a>
                    </div>
                </form>
            </div>
        </div>
    </div>

</section>
    @section Scripts {
        @{
            await Html.RenderPartialAsync("_ValidationScriptsPartial.cshtml");
        }
    }